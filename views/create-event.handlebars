<div class="container">
    <!-- header-->
    <h3>Create A New Event</h3>
</div>
<div class="row">
    <form class="col s12" id="create-event-form">
        <!-- In Person Field -->
        <div class="container">
            <h5></h5>
            <label for="event-proximity">Please check the box if this event will take place in person: </label>
            <input type="checkbox" id="event-proximity" name="event-proximity" required>
        </div>
        <!-- Location Field -->
        <div class="container">
            <h5>Location</h5>
            <label for="event-location">Provide the physical location or a Zoom link to the event:</label>
            <input type="text" id="event-location" name="event-location" placeholder="e.g. Radio Coffee & Beer" required>
        </div>
        <!-- Event Name -->
        <div class="container">
            <h5>Event Name</h5>
            <label for="event-name">Choose the name of the event:</label>
            <input type="text" id="event-name" name="event-name" placeholder="e.g. Trivia Night" required>
        </div>
        <!-- Event Description -->
        <div class="container">
            <h5>Event description</h5>
            <label for="event-description">Provide your description for the event:</label>
            <textarea cols="30" rows="10" id="event-description" name="event-description" placeholder="Enter the description here" required>
        </div>
        <!-- Event Date -->
        <div class="container">
            <h5>Event Date</h5>
            <label for="event-date">Choose a date for your event:</label>
            <input type="date" id="event-date" name="event-date" min="2021-10-01" max="2022-12-31" required>
        </div>
        <!-- Start Time Field -->
        <div class="container">
            <h5>Start Time</h5>
            <label for="start-time">Choose a start time for your event:</label>
            <input type="time" id="start-time" name="start-time" min="00:00" max="23:59" required>
        </div>
        <!-- End Time Field -->
        <div class="container">
            <h5>End Time</h5>
            <label for="end-time">Choose an end time for your event:</label>
            <input type="time" id="end-time" name="end-time" min="00:00" max="23:59" required>
        </div>
        <!-- Event category -->
        <div class="container">
            <h6>Event Category</h6>
            <label>
                <input name="category" type="radio" checked />
                <span>Board Games</span>
            </label>
            <label>
                <input name="category" type="radio" />
                <span>Video Games</span>
            </label>
            <label>
                <input name="category" type="radio" />
                <span>Dungeons & Dragons</span>
            </label>
            <label>
                <input name="category" type="radio" />
                <span>Poker Night</span>
            </label>
            <label>
                <input name="category" type="radio" />
                <span>Sports</span>
            </label>
            <label>
                <input name="category" type="radio" />
                <span>Study Session</span>
            </label>
            <label>
                <input name="category" type="radio" />
                <span>Book Club</span>
            </label>
            <label>
                <input name="category" type="radio" />
                <span>Netflix Watch Party</span>
            </label>
            <label>
                <input name="category" type="radio" />
                <span>Wine & Art Party</span>
            </label>
            <label>
                <input name="category" type="radio" />
                <span>Trivia Night</span>
            </label>
        </div>
        <!-- name colon and every one of them has to have the same name -->
        <div class="container" style="margin-top: 30px;">
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
            </button>
        </div>
    </form>
</div>

<script src="./js/createEvent.js"></script>