<div class="card hoverable">
    <div class="card-image">
        <a href="/events/{{id}}" alt="go to the main page for this event">
        <img src="https://i.imgur.com/xqLnaoL.jpeg"></a>
    </div>
    <div class="card-content black-text">
        <span class="card-title"><a href="/events/{{id}}" alt="get more details about this event">{{event_name}}</a></span>
    {{!-- <div> --}}
        {{!-- This should be the little icon tag thing that looks like a tiny badge --}}
    {{!-- </div> --}}
        <p>{{user.username}}</p>
    </div>
    <div class="card-action">
        <p>{{location}}</p>
        <p>{{format_date event_date}}</p>
        <p>{{format_time start_time}} to {{format_time end_time}}</p>
    </div>
</div>
